@page "/about"
@inject NavigationManager NavigationManager

<PageTitle>About - Tempus</PageTitle>

<!-- Hero Section -->
<div class="hero-section" style="min-height: 60vh;">
    <div class="hero-bg-shapes">
        <div class="shape shape-1"></div>
        <div class="shape shape-2"></div>
        <div class="shape shape-3"></div>
    </div>

    <div class="hero-content">
        <h1 class="hero-title" style="font-size: clamp(2.5rem, 7vw, 4.5rem);">About Tempus</h1>
        <p class="hero-subtitle">Empowering professionals to master their time</p>
        <p class="hero-description">
            Founded in 2024, Tempus has been on a mission to revolutionize how businesses
            and individuals manage their most precious resource: time.
        </p>
    </div>
</div>

<!-- Mission Section -->
<div class="features-section" style="background: white;">
    <div class="container-max">
        <RadzenRow Gap="3rem" AlignItems="AlignItems.Center">
            <RadzenColumn Size="12" SizeLG="6">
                <div class="image-placeholder">
                    <RadzenIcon Icon="access_time" />
                </div>
            </RadzenColumn>
            <RadzenColumn Size="12" SizeLG="6">
                <h2 class="gradient-text" style="font-size: 2.5rem; font-weight: 700; margin-bottom: 1.5rem;">Our Mission</h2>
                <p style="font-size: 1.2rem; line-height: 1.8; color: #4a5568; margin-bottom: 1rem;">
                    At Tempus, we believe that time is the most valuable asset in business and life.
                    Our mission is to provide cutting-edge tools that help individuals and teams
                    maximize productivity, reduce scheduling conflicts, and achieve more.
                </p>
                <p style="font-size: 1.2rem; line-height: 1.8; color: #4a5568;">
                    We're committed to creating intuitive, powerful software that makes time management
                    effortless, so you can focus on what truly matters.
                </p>
            </RadzenColumn>
        </RadzenRow>
    </div>
</div>

<!-- Values Section -->
<div class="features-section">
    <div class="container-max">
        <h2 class="section-title">Our Core Values</h2>
        <p class="section-subtitle">The principles that guide everything we do</p>

        <div class="features-grid">
            <div class="feature-card">
                <div class="feature-icon">
                    <RadzenIcon Icon="bolt" Style="font-size: 2.5rem;" />
                </div>
                <h3 class="feature-title">Innovation</h3>
                <p class="feature-description">
                    We constantly push boundaries to deliver cutting-edge features that anticipate
                    our users' needs and set new industry standards.
                </p>
            </div>

            <div class="feature-card">
                <div class="feature-icon" style="background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);">
                    <RadzenIcon Icon="favorite" Style="font-size: 2.5rem;" />
                </div>
                <h3 class="feature-title">User-Centric</h3>
                <p class="feature-description">
                    Every decision we make starts with our users. We listen, learn, and build
                    features that solve real problems.
                </p>
            </div>

            <div class="feature-card">
                <div class="feature-icon" style="background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);">
                    <RadzenIcon Icon="verified" Style="font-size: 2.5rem;" />
                </div>
                <h3 class="feature-title">Reliability</h3>
                <p class="feature-description">
                    We maintain 99.9% uptime and enterprise-grade security because your trust
                    and data are paramount to us.
                </p>
            </div>

            <div class="feature-card">
                <div class="feature-icon" style="background: linear-gradient(135deg, #fa709a 0%, #fee140 100%);">
                    <RadzenIcon Icon="trending_up" Style="font-size: 2.5rem;" />
                </div>
                <h3 class="feature-title">Growth</h3>
                <p class="feature-description">
                    We're committed to continuous improvement, both in our product and in
                    helping our users achieve their goals.
                </p>
            </div>

            <div class="feature-card">
                <div class="feature-icon" style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);">
                    <RadzenIcon Icon="diversity_3" Style="font-size: 2.5rem;" />
                </div>
                <h3 class="feature-title">Collaboration</h3>
                <p class="feature-description">
                    We believe in the power of teamwork and build tools that bring people
                    together to accomplish amazing things.
                </p>
            </div>

            <div class="feature-card">
                <div class="feature-icon" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                    <RadzenIcon Icon="insights" Style="font-size: 2.5rem;" />
                </div>
                <h3 class="feature-title">Transparency</h3>
                <p class="feature-description">
                    We operate with honesty and openness, keeping our users informed and
                    building trust through clear communication.
                </p>
            </div>
        </div>
    </div>
</div>

<!-- Stats Section -->
<div class="stats-section">
    <div class="container-max">
        <h2 style="font-size: 3rem; font-weight: 700; text-align: center; margin-bottom: 3rem;">Tempus by the Numbers</h2>

        <div class="stats-grid">
            <div>
                <span class="stat-number">50,000+</span>
                <span class="stat-label">Active Users Worldwide</span>
            </div>
            <div>
                <span class="stat-number">1M+</span>
                <span class="stat-label">Events Managed Daily</span>
            </div>
            <div>
                <span class="stat-number">150+</span>
                <span class="stat-label">Countries Served</span>
            </div>
            <div>
                <span class="stat-number">99.9%</span>
                <span class="stat-label">System Uptime</span>
            </div>
            <div>
                <span class="stat-number">24/7</span>
                <span class="stat-label">Customer Support</span>
            </div>
            <div>
                <span class="stat-number">4.9/5</span>
                <span class="stat-label">User Rating</span>
            </div>
        </div>
    </div>
</div>

<!-- Team Section -->
<div class="features-section" style="background: white;">
    <div class="container-max">
        <h2 class="section-title">Built by Time Management Experts</h2>
        <p class="section-subtitle">Our team combines decades of experience in productivity, software engineering, and design</p>

        <RadzenRow Gap="2rem" class="rz-mt-4">
            <RadzenColumn Size="12" SizeMD="6" SizeLG="3">
                <div class="feature-card" style="text-align: center;">
                    <div style="width: 120px; height: 120px; margin: 0 auto 1.5rem; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                        <RadzenIcon Icon="person" Style="font-size: 4rem; color: white;" />
                    </div>
                    <h4 style="font-size: 1.3rem; font-weight: 700; margin-bottom: 0.5rem;">Engineering Team</h4>
                    <p style="color: #718096;">World-class developers building robust, scalable solutions</p>
                </div>
            </RadzenColumn>

            <RadzenColumn Size="12" SizeMD="6" SizeLG="3">
                <div class="feature-card" style="text-align: center;">
                    <div style="width: 120px; height: 120px; margin: 0 auto 1.5rem; background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%); border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                        <RadzenIcon Icon="design_services" Style="font-size: 4rem; color: white;" />
                    </div>
                    <h4 style="font-size: 1.3rem; font-weight: 700; margin-bottom: 0.5rem;">Design Team</h4>
                    <p style="color: #718096;">Creating beautiful, intuitive user experiences</p>
                </div>
            </RadzenColumn>

            <RadzenColumn Size="12" SizeMD="6" SizeLG="3">
                <div class="feature-card" style="text-align: center;">
                    <div style="width: 120px; height: 120px; margin: 0 auto 1.5rem; background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%); border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                        <RadzenIcon Icon="support_agent" Style="font-size: 4rem; color: white;" />
                    </div>
                    <h4 style="font-size: 1.3rem; font-weight: 700; margin-bottom: 0.5rem;">Support Team</h4>
                    <p style="color: #718096;">Dedicated to helping you succeed every step of the way</p>
                </div>
            </RadzenColumn>

            <RadzenColumn Size="12" SizeMD="6" SizeLG="3">
                <div class="feature-card" style="text-align: center;">
                    <div style="width: 120px; height: 120px; margin: 0 auto 1.5rem; background: linear-gradient(135deg, #fa709a 0%, #fee140 100%); border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                        <RadzenIcon Icon="campaign" Style="font-size: 4rem; color: white;" />
                    </div>
                    <h4 style="font-size: 1.3rem; font-weight: 700; margin-bottom: 0.5rem;">Growth Team</h4>
                    <p style="color: #718096;">Spreading the word and growing our community</p>
                </div>
            </RadzenColumn>
        </RadzenRow>
    </div>
</div>

<!-- Call to Action -->
<div class="hero-section" style="min-height: 60vh;">
    <div class="hero-bg-shapes">
        <div class="shape shape-2"></div>
        <div class="shape shape-3"></div>
    </div>

    <div class="hero-content">
        <h2 class="hero-title" style="font-size: clamp(2rem, 6vw, 3.5rem);">Join the Tempus Community</h2>
        <p class="hero-description">
            Be part of a growing community of professionals who have taken control of their time.
        </p>
        <div class="hero-cta">
            <button class="btn-premium btn-primary" @onclick="@(() => NavigationManager.NavigateTo("/calendar"))">
                Get Started Today
            </button>
            <button class="btn-premium btn-outline" @onclick="@(() => NavigationManager.NavigateTo("/features"))">
                Explore Features
            </button>
        </div>
    </div>
</div>
