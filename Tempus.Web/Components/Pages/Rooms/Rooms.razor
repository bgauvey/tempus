@page "/rooms"
@using System.Security.Claims
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Authorization
@using Tempus.Core.Interfaces
@using Tempus.Core.Models
@using Tempus.Web.Components.Dialogs.Rooms
@inject IRoomRepository RoomRepository
@inject ILogger<Rooms> Logger
@inject NotificationService NotificationService
@inject DialogService DialogService
@inject AuthenticationStateProvider AuthenticationStateProvider
@attribute [Authorize]

<PageTitle>Rooms - Tempus</PageTitle>

<RadzenStack Gap="1.5rem">
    <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.SpaceBetween">
        <RadzenText TextStyle="TextStyle.H3" TagName="TagName.H1">
            Rooms
        </RadzenText>
        <RadzenButton Click="@CreateNewRoom"
                      ButtonStyle="ButtonStyle.Primary"
                      Text="Create Room"
                      Icon="add_circle"
                      Size="ButtonSize.Large" />
    </RadzenStack>

    <RadzenText TextStyle="TextStyle.Body1" Style="color: var(--rz-text-secondary-color);">
        Manage conference rooms and meeting spaces for booking.
    </RadzenText>

    @if (isLoading)
    {
        <RadzenProgressBarCircular ShowValue="false" Mode="ProgressBarMode.Indeterminate" Style="margin: 2rem auto;" />
    }
    else if (!roomsList.Any())
    {
        <RadzenCard Style="text-align: center; padding: 3rem;">
            <RadzenStack Gap="1rem" AlignItems="AlignItems.Center">
                <RadzenIcon Icon="meeting_room" Style="font-size: 4rem; color: var(--rz-text-tertiary-color);" />
                <RadzenText TextStyle="TextStyle.H6">No rooms yet</RadzenText>
                <RadzenText TextStyle="TextStyle.Body2" Style="color: var(--rz-text-secondary-color);">
                    Create your first room to start managing conference room bookings.
                </RadzenText>
                <RadzenButton Click="@CreateNewRoom"
                              ButtonStyle="ButtonStyle.Primary"
                              Text="Create Room"
                              Icon="add_circle" />
            </RadzenStack>
        </RadzenCard>
    }
    else
    {
        <RadzenDataGrid Data="@roomsList" TItem="Room" AllowSorting="true" AllowFiltering="true"
                        FilterMode="FilterMode.Simple" AllowPaging="true" PageSize="10">
            <Columns>
                <RadzenDataGridColumn TItem="Room" Property="Name" Title="Name" Width="200px">
                    <Template Context="room">
                        <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="0.5rem">
                            <RadzenIcon Icon="meeting_room" Style="font-size: 1.25rem;" />
                            <RadzenText TextStyle="TextStyle.Subtitle2">@room.Name</RadzenText>
                        </RadzenStack>
                    </Template>
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="Room" Property="Location" Title="Location" Width="200px" />
                <RadzenDataGridColumn TItem="Room" Property="Building" Title="Building" Width="150px" />
                <RadzenDataGridColumn TItem="Room" Property="Floor" Title="Floor" Width="100px">
                    <Template Context="room">
                        @if (!string.IsNullOrEmpty(room.Floor))
                        {
                            <RadzenText>Floor @room.Floor</RadzenText>
                        }
                    </Template>
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="Room" Property="Capacity" Title="Capacity" Width="100px">
                    <Template Context="room">
                        <RadzenBadge Text="@($"{room.Capacity}")" BadgeStyle="BadgeStyle.Info" />
                    </Template>
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="Room" Property="IsAvailable" Title="Status" Width="120px" Filterable="false" Sortable="false">
                    <Template Context="room">
                        @if (room.IsAvailable)
                        {
                            <RadzenBadge Text="Available" BadgeStyle="BadgeStyle.Success" />
                        }
                        else
                        {
                            <RadzenBadge Text="Unavailable" BadgeStyle="BadgeStyle.Secondary" />
                        }
                    </Template>
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="Room" Title="Amenities" Width="250px" Filterable="false" Sortable="false">
                    <Template Context="room">
                        @{
                            var amenities = room.GetAmenities();
                            if (amenities != null && amenities.Any())
                            {
                                <RadzenStack Orientation="Orientation.Horizontal" Gap="0.25rem" Wrap="FlexWrap.Wrap">
                                    @foreach (var amenity in amenities.Take(3))
                                    {
                                        <RadzenBadge Text="@amenity" BadgeStyle="BadgeStyle.Light" Style="font-size: 0.75rem;" />
                                    }
                                    @if (amenities.Count > 3)
                                    {
                                        <RadzenBadge Text="@($"+{amenities.Count - 3}")" BadgeStyle="BadgeStyle.Light" Style="font-size: 0.75rem;" />
                                    }
                                </RadzenStack>
                            }
                        }
                    </Template>
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="Room" Title="Actions" Width="180px" Filterable="false" Sortable="false">
                    <Template Context="room">
                        <RadzenStack Orientation="Orientation.Horizontal" Gap="0.5rem">
                            <RadzenButton Click="@(() => EditRoom(room))"
                                          ButtonStyle="ButtonStyle.Light"
                                          Icon="edit"
                                          Size="ButtonSize.Small"
                                          title="Edit" />
                            <RadzenButton Click="@(() => ToggleAvailable(room))"
                                          ButtonStyle="@(room.IsAvailable ? ButtonStyle.Warning : ButtonStyle.Success)"
                                          Icon="@(room.IsAvailable ? "block" : "check_circle")"
                                          Size="ButtonSize.Small"
                                          title="@(room.IsAvailable ? "Mark Unavailable" : "Mark Available")" />
                            <RadzenButton Click="@(() => DeleteRoom(room))"
                                          ButtonStyle="ButtonStyle.Danger"
                                          Icon="delete"
                                          Size="ButtonSize.Small"
                                          title="Delete" />
                        </RadzenStack>
                    </Template>
                </RadzenDataGridColumn>
            </Columns>
        </RadzenDataGrid>
    }
</RadzenStack>

@code {
    private List<Room> roomsList = new();
    private bool isLoading = true;
    private string userId = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        await LoadUserId();
        await LoadRooms();
    }

    private async Task LoadUserId()
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        userId = authState.User.FindFirst(ClaimTypes.NameIdentifier)?.Value ?? string.Empty;
    }

    private async Task LoadRooms()
    {
        isLoading = true;
        try
        {
            roomsList = await RoomRepository.GetAllAsync(userId);
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading rooms");
            NotificationService.Notify(NotificationSeverity.Error, "Error", "Failed to load rooms");
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task CreateNewRoom()
    {
        var result = await DialogService.OpenAsync<RoomDialog>("Create Room",
            new Dictionary<string, object> { { "UserId", userId } },
            new DialogOptions { Width = "700px", Height = "80vh", Resizable = true, Draggable = true });

        if (result != null)
        {
            await LoadRooms();
        }
    }

    private async Task EditRoom(Room room)
    {
        var result = await DialogService.OpenAsync<RoomDialog>($"Edit {room.Name}",
            new Dictionary<string, object> { { "Room", room }, { "UserId", userId } },
            new DialogOptions { Width = "700px", Height = "80vh", Resizable = true, Draggable = true });

        if (result != null)
        {
            await LoadRooms();
        }
    }

    private async Task ToggleAvailable(Room room)
    {
        try
        {
            room.IsAvailable = !room.IsAvailable;
            await RoomRepository.UpdateAsync(room);
            NotificationService.Notify(NotificationSeverity.Success, "Success",
                $"Room marked as {(room.IsAvailable ? "available" : "unavailable")}");
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error toggling room availability");
            NotificationService.Notify(NotificationSeverity.Error, "Error", "Failed to update room");
            room.IsAvailable = !room.IsAvailable; // Revert on error
        }
    }

    private async Task DeleteRoom(Room room)
    {
        var confirmed = await DialogService.Confirm(
            $"Are you sure you want to delete '{room.Name}'? This will also delete all associated bookings.",
            "Delete Room",
            new ConfirmOptions { OkButtonText = "Delete", CancelButtonText = "Cancel" });

        if (confirmed == true)
        {
            try
            {
                await RoomRepository.DeleteAsync(room.Id, userId);
                roomsList.Remove(room);
                NotificationService.Notify(NotificationSeverity.Success, "Success", "Room deleted");
            }
            catch (Exception ex)
            {
                Logger.LogError(ex, "Error deleting room");
                NotificationService.Notify(NotificationSeverity.Error, "Error", "Failed to delete room");
            }
        }
    }
}
