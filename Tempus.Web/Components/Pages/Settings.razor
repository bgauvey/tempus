            <RadzenStack Gap="0.5rem">
                <RadzenText TextStyle="TextStyle.H3" Style="font-weight: 700; margin: 0;">‚öôÔ∏è Calendar Settings</RadzenText>
                <RadzenText TextStyle="TextStyle.Body1" Style="opacity: 0.9;">
                    Customize your calendar experience and preferences.
                </RadzenText>
            </RadzenStack>
        </RadzenCard>

        @if (_settings != null)
        {
            <RadzenTabs Change="@OnTabChange" RenderMode="TabRenderMode.Client">
                <Tabs>
