            Id = Guid.Empty, // Use Empty GUID to indicate this is a new attendee
            Name = attendeeName,
            Email = _selectedContactEmail,
            EventId = _event.Id,
            Status = AttendeeStatus.Pending,
            IsOrganizer = false
