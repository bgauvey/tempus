{
  "DetailedErrors": true,
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft.EntityFrameworkCore": "Error",
        "Microsoft.EntityFrameworkCore.Database.Command": "Error",
        "Microsoft.EntityFrameworkCore.Database.Connection": "Warning",
        "Microsoft.EntityFrameworkCore.Query": "Error",
        "Microsoft.AspNetCore": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {SourceContext}: {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/tempus-.log",
          "rollingInterval": "Day",
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] {SourceContext}: {Message:lj}{NewLine}{Exception}",
          "retainedFileCountLimit": 7
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "OpenTelemetry": {
    "ServiceName": "Tempus",
    "ServiceVersion": "1.0.0",
    "Tracing": {
      "Enabled": true,
      "ConsoleExporter": {
        "Enabled": true
      },
      "OtlpExporter": {
        "Enabled": false,
        "Endpoint": "http://localhost:4317"
      }
    },
    "Metrics": {
      "Enabled": true,
      "ConsoleExporter": {
        "Enabled": true,
        "ExportIntervalMilliseconds": 60000
      },
      "OtlpExporter": {
        "Enabled": false,
        "Endpoint": "http://localhost:4317"
      }
    }
  },
  "AllowedHosts": "*",
  "ApplicationSettings": {
    "BaseUrl": "http://localhost:5000"
  },
  "EmailSettings": {
    "Enabled": true,
    "Provider": "SMTP",
    "SmtpServer": "smtp.gmail.com",
    "SmtpPort": 587,
    "SmtpUsername": "your-email@gmail.com",
    "SmtpPassword": "your-app-specific-password",
    "EnableSsl": true,
    "SendGridApiKey": "",
    "FromEmail": "noreply@tempus-app.com",
    "FromName": "Tempus"
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=TempusDb;User Id=sa;Password=password123!;TrustServerCertificate=True;"
  },
  "GoogleCalendar": {
    "ClientId": "YOUR_GOOGLE_CLIENT_ID",
    "ClientSecret": "YOUR_GOOGLE_CLIENT_SECRET"
  },
  "Outlook": {
    "ClientId": "YOUR_AZURE_APP_CLIENT_ID",
    "ClientSecret": "YOUR_AZURE_APP_CLIENT_SECRET",
    "TenantId": "common"
  }
}
